<% content_for(:home_section) do %>
  <section class="small-section bg-dark-lighter">
    <div class="relative container align-left">
      <div class="row">
        <div class="col-md-8">
          <h1 class="hs-line-11 font-alt mb-20 mb-xs-0">My Account</h1>
          <div class="hs-line-4 font-alt">
            Lorem ipsum dolor sit amet, consectetur adipiscing
          </div>
        </div>
        <div class="col-md-4 mt-30">
          <div class="mod-breadcrumbs font-alt align-right">
            <a href="#">Home</a>&nbsp;/&nbsp;<a href="#">Pages</a>&nbsp;/&nbsp;<span>My Account</span>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>
<!-- Section -->
<section class="page-section">
  <div class="container relative">
    <!-- Nav Tabs -->
    <div class="align-center mb-40 mb-xxs-30">
      <ul class="nav nav-tabs tpl-minimal-tabs">
        <li class="active"><a href="#mini-one" data-toggle="tab">Login</a></li>
        <li><a href="#mini-two" data-toggle="tab">Registration</a></li>
      </ul>
    </div>
    <!-- End Nav Tabs -->
    <!-- Tab panes -->
    <div class="tab-content tpl-minimal-tabs-cont section-text">
      <div class="tab-pane fade in active" id="mini-one">
        <!-- Login Form -->
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <%= form_for resource, as: resource_name, url: session_path(resource_name), class: "form contact-form" do |f| %>
              <div class="clearfix">
                <div class="form-group">
                  <%= f.text_field :login, autofocus: true, placeholder: "Username or Email", class: "input-md round form-control" %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "input-md round form-control" %>
                </div>
              </div>
              <div class="clearfix">
                <div class="cf-left-col">
                  <div class="form-group pt-20">
                    <% if devise_mapping.rememberable? -%>
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    <% end -%>
                  </div>
                </div>
                <div class="cf-right-col">
                  <div class="align-right pt-10">
                    <%= f.submit "Log in", class: "submit_btn btn btn-mod btn-medium btn-round" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <!-- End Login Form -->
      </div>
      <div class="tab-pane fade" id="mini-two">
        <!-- Registry Form -->
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <%= form_for resource, as: resource_name, url: registration_path(resource_name), class: "form contact-form" do |f| %>
              <div class="clearfix">
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, class: "input-md round form-control", placeholder: "Email" %>
                </div>
                <div class="form-group">
                  <%= f.text_field :username, autofocus: true, class: "input-md round form-control", placeholder: "Username" %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, autocomplete: "off", class: "input-md round form-control", placeholder: "Password" %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "input-md round form-control", placeholder: "Re-enter Password" %>
                </div>
              </div>
              <div class="pt-10">
                <%= f.submit "Register", class: "submit_btn btn btn-mod btn-medium btn-round btn-full" %>
              </div>
            <% end %>
          </div>
        </div>
        <!-- End Registry Form -->
      </div>
    </div>
  </div>
</section>
<!-- End Section -->
