<% content_for(:specific_page_js) do %>
  <%= javascript_include_tag 'jquery.mb.YTPlayer.js' %>
  <script type="text/javascript">
    // Video Init
    $(document).ready(function(){
      if (!($("html").hasClass("mobile"))){
        $("#home .player").YTPlayer();
      }
    });
    var owl = $("#home.fullwidth-slider");
    var m = '';
    $(".logo img").hover(function(){
        if(m != 0){
          m = 0;
          $("#home .player").YTPPlay();
          $('.home-section .owl-wrapper').trigger('owl.goTo', 0);
        }
      },function(){
    });

    $(".desktop-nav ul li").hover(function(){
        var n = $( ".desktop-nav ul li" ).index(this);
        if( m != n + 1){
          $("#home .player").YTPStop();
          m = n + 1;
          $('.home-section .owl-wrapper').trigger('owl.goTo', n + 1);
        }
      }, function(){
    });
  </script>
<% end %>
